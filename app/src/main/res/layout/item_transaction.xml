        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- â‚¹0"
            android:textColor="#F44336"
