<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme - CHANGED PARENT TO MATERIAL COMPONENTS -->
    <style name="Theme.SpendSense" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Global Backgrounds -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>

        <!-- Text Colors (Defaults) -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">#4CAF50</item>
        <item name="android:statusBarColor">#4CAF50</item>
    </style>

    <!-- Transparent Bottom Sheet Style -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>